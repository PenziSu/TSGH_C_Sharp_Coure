
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script>
        //以匿名函式執行註冊
        window.onload = function () {
            //可以用.onXXXX的事件就盡量使用
            //document.getElementById("Button2").onclick = function /*匿名函式*/() {
            //    clickMe();
            //}
            //以jQuery語法取代上述語法
            $('#Button2').click(function () {
                clickMe();
            })

            //無法用.onXXX的事件就以下列方式註冊
            //document.getElementById("Button3").addEventListener("click", function () {
            //    clickMe();
            //})
            //以jQuery語法取代上述語法
            $('#Button3').bind("click", function () {
                clickMe();
            })

            $('#Button4').click(function () {
                alert("Hello： " + document.getElementById("Text1").value);
            })
        }
                 
    </script>

    <script src="~/Scripts/JavaScript1.js"></script>
</head>
<body>
    <div> 
        <input type="button" id="Button1" value="Click Me" onclick="clickMe()" />

        <input id="Button2" type="button" value="DOM Level 0 Test" />

        <input id="Button3" type="button" value="DOM Level 2 Test" />


        <hr />
        Name : <input id="Text1" type="text" />
        <input id="Button4" type="button" value="Hello" />
    </div>
    
</body>
</html>
